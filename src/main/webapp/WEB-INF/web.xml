<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.market.login.LoginServlet</servlet-class>
        <init-param>
            <param-name>id</param-name>
            <param-value>user1</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>foofighters</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.market.login.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>foodStand</servlet-name>
        <servlet-class>com.market.production.FoodStand</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>foodStand</servlet-name>
        <url-pattern>/foodStand</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>initServlet</servlet-name>
        <servlet-class>com.market.production.InitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>initServlet</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>basketServlet</servlet-name>
        <servlet-class>com.market.basket.BasketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>basketServlet</servlet-name>
        <url-pattern>/basketServlet</url-pattern>
    </servlet-mapping>



    <context-param>
        <param-name>양파</param-name>
        <param-value>1000,2</param-value>
    </context-param>
    <context-param>
        <param-name>계란</param-name>
        <param-value>2000,5</param-value>
    </context-param>
    <context-param>
        <param-name>파</param-name>
        <param-value>500,10</param-value>
    </context-param>
    <context-param>
        <param-name>사과</param-name>
        <param-value>2000,20</param-value>
    </context-param>



</web-app>

